{% extends "/layouts.html.twig" %}

{% block content %}
    <!-- Page Header -->
    <header class="masthead"
            style="background-image: url('/public/node_modules/startbootstrap-clean-blog/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>{{ post.header.title }}</h1>
                        <h2 class="subheading">{{ post.header.brief }}</h2>
                        <span class="meta">Posted by
                <a href="#">{{ post.blogger.nickname }}</a>
                           on {{ post.createAt|date }}<br />
                           update on {{ post.updateAt|date }}
                </span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <p>{{ post.body.content }}</p>
                    <br>
                    <a href="/changePost/{{ post.postId.value }}" class="btn btn-primary">Change</a>
                </div>
            </div>
        </div>
    </article>
    <hr>
    {% include 'comments/newComment.html.twig' with{'post' : post} %}
    {% include 'comments/commentList.html.twig' with{'thread' : thread, 'comments' : comments} %}
{% endblock %}
