<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Connexion</title>
    <link rel="stylesheet" href="/public/node_modules/boosted/dist/css/boosted.min.css" type="text/css">
    <style>
        html {
            height: 100%;
        }

        body {
            height: 100%;
        }

        .page {
            display: grid;
            height: 100%;
            min-height: 100%;
            grid-template-rows: 45px 1fr 45px;
            grid-template-areas: 'header' 'main' 'footer';
        }

        header {
            grid-area: header;
            background-color: #3c4858;
        }

        main {
            min-height: 100%;
            height: 100px;
            grid-area: main;
        }

        main > .i-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            background-color: lightsteelblue;
        }

        footer {
            /*grid-row-start: 3;*/
            /*grid-row-end: 4;*/
            grid-area: footer;
            background-color: #3c4858;
        }

        .form-user {
            position: relative;
            margin: auto;
            padding-top: 21px;
            padding-right: 15px;
            padding-bottom: 0;
            padding-left: 15px;
            background-color: rgba(255, 255, 255, .7);
        }
    </style>
</head>
<body>
<div class="page">
    <header></header>
    <main>
        <div class="i-container">
            <div class="form-user">
                <h1 class="text-center">Blogpost</h1>
                {% if errors.authenticate %}
                    <p>{{ errors.authenticate }}</p>
                {% endif %}
                <form action="/login" method="post" novalidate>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="username" class="col-sm-4 col-form-label">username</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" id="username" class="form-control" name="username"
                                   required="required"
                                   value="{{ username ?? '' }}">
                            <p class="help-block text-danger">
                                {{ errors.username ?? '' }}
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="password" class="col-sm-4 col-form-label">Password</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="password" id="password" class="form-control" name="password"
                                   required="required" value="{{ password ?? '' }}"
                            >
                            <p class="help-block text-danger">
                                {{ errors.password ?? '' }}
                            </p>
                        </div>
                    </div>
                    <div class="form-group row float-right">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary">LOG IN</button>
                        </div>
                    </div>
                    <input type="hidden" value="{{ _csrf_token }}" name="_csrf_token">
                </form>
            </div>
        </div>
    </main>
    <footer></footer>
</div>
</body>
</html>



