<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="firstname">firstname</label>
            <input id="firstname" type="text" class="form-control" name="firstname"
                   value="{{ user.firstname ?? '' }}">
            <p class="help-block text-danger">
                {{ errors.user.firstname ?? '' }}
            </p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="lastname">lastname</label>
            <input id="lastname" type="text" class="form-control" name="lastname"
                   value="{{ user.lastname ?? '' }}">
            <p class="help-block text-danger">
                {{ errors.user.lastname ?? '' }}
            </p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="nickname">nickname</label>
            <input id="nickname" type="text" class="form-control" name="nickname"
                   value="{{ user.nickname ?? '' }}">
            <p class="help-block text-danger">
                {{ errors.user.nickname ?? '' }}
            </p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="username">username</label>
            <input id="username" type="text" class="form-control" name="username"
                   value="{{ user.username ?? '' }}">
            <p class="help-block text-danger">
                {{ errors.user.username ?? '' }}
            </p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label for="email">email</label>
            <input id="email" type="email" class="form-control" name="email" value="{{ user.email ?? '' }}">
            <p class="help-block text-danger">
                {{ errors.user.email ?? '' }}
            </p>
        </div>
    </div>
</div>
{% if (context == 'newUser') %}
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" type="password" class="form-control" name="password" value="{{ user.password?? '' }}" />
            <p class="help-block text-danger">
                {{ errors.user.password ?? '' }}
            </p>
        </div>
    </div>
</div>
{% endif %}
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label for="role">Roles</label>
            <select name="role" id="role" class="form-control">
                <option value="guest" {% if (user.role == 'guest') %}selected="selected"{% endif %}>guest</option>
                <option value="blogger" {% if (user.role == 'blogger') %}selected="selected"{% endif %}>blogger</option>
                <option value="admin" {% if (user.role == 'admin') %}selected="selected"{% endif %}>admin</option>
            </select>
        </div>
    </div>
</div>
